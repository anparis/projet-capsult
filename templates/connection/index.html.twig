{% extends 'base.html.twig' %}

{% block title %}Connecter une capsule
{% endblock %}

{% block body %}
<a href="{{path('capsule_index', {'slug_capsule':current_capsule.slug, 'slug_user':current_capsule.user.slug})}}">Revenir à {{current_capsule.slug}}</a>
<p>Connecter à :</p>
	<div>
		{% for capsule in capsules %}
      {% if capsule.id != current_capsule.id %}
			  <a href="{{path('app_connection', {'slugUser': current_capsule.user.slug, 'slugCapsule': current_capsule.slug,'idCapsule':capsule.id, 'idBloc':bloc.id})}}">{{app.user.username}} / {{capsule.title}}</a><br>
      {% endif %}
		{% endfor %}
	</div>

{% endblock %}
